<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="0.7dp"
    app:cardMaxElevation="1dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/lightgray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:id="@+id/card_reference"
            android:text="@string/referencia"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/title"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70sp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="65dp"
                    android:id="@+id/card_magnitud"
                    android:text="@string/magnitud"
                    android:textAlignment="center"
                    android:textSize="42sp"
                    android:textColor="@color/Magnitude"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/latitud"
                    android:textAlignment="center"
                    android:id="@+id/card_latitud"
                    android:textSize="18sp"
                    android:textColor="@color/data"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/longitud"
                    android:textAlignment="center"
                    android:id="@+id/card_longitud"
                    android:textSize="18sp"
                    android:textColor="@color/data"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profundidad"
                    android:textAlignment="center"
                    android:id="@+id/card_profundidad"
                    android:textSize="18sp"
                    android:textColor="@color/data"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fecha_y_hora_del_evento"
            android:textAlignment="center"
            android:id="@+id/card_fecha"
            android:textSize="18sp"
            android:textColor="@color/DarkGreen"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>